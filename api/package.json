{
  "name": "project-api",
  "version": "1.0.0",
  "description": "Simple node server example with typescript and pre-commit hooks.",
  "main": "index.js",
  "jest": {
    "verbose": true
  },
  "scripts": {
    "start": "npm run build:live",
    "test": "jest",
    "lint": "eslint .",
    "build": "tsc",
    "db:seed": "ts-node src/api/startScript.ts",
    "db:drop": "mongo challenge-app --eval 'db.dropDatabase()'",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' index.ts",
    "docs": "./node_modules/.bin/typedoc --out dist/docs --mode modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marianasvirzhevska/mentoring.git"
  },
  "keywords": [
    "Node.JS",
    "TypeScript",
    "API"
  ],
  "author": "Mariana Svirzhevska",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marianasvirzhevska/mentoring/issues"
  },
  "homepage": "https://github.com/marianasvirzhevska/mentoring#readme",
  "dependencies": {
    "@types/config": "0.0.37",
    "@types/hapi__joi": "^17.1.6",
    "@types/mongoose": "^5.10.1",
    "@types/node-schedule": "^1.3.1",
    "@types/passport": "^1.0.4",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "eslint-plugin-unicorn": "^23.0.0",
    "express": "^4.17.1",
    "install": "^0.13.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.15",
    "node-schedule": "^1.3.2",
    "npm": "^6.14.9",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "socket.io": "^3.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/mongodb": "^3.5.34",
    "@types/node": "^14.14.2",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "config": "^3.3.3",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.4.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "*.{js, ts}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
