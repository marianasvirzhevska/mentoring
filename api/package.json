{
  "name": "project-api",
  "version": "1.0.0",
  "description": "Simple node server example with typescript and pre-commit hooks.",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:live",
    "test": "jest",
    "lint": "eslint .",
    "build": "tsc",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marianasvirzhevska/mentoring.git"
  },
  "keywords": [
    "Node.JS",
    "TypeScript",
    "API"
  ],
  "author": "Mariana Svirzhevska",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marianasvirzhevska/mentoring/issues"
  },
  "homepage": "https://github.com/marianasvirzhevska/mentoring#readme",
  "dependencies": {
    "eslint-plugin-unicorn": "^23.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.2",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.4.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "*.{js, ts}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
